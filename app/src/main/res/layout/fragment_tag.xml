<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.alejandrohall.android.ui.fragments.TagFragment">


    <EditText
        android:inputType="text"
        android:hint="@string/hint_tag"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etTag"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/here_result"
        android:id="@+id/tvResultTag"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_tag"
        android:id="@+id/btnTagText"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
